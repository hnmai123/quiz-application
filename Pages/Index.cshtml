@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center py-5 mb-4">
    <h1 class="display-3 fw-bold text-primary mb-3">
        📚 PRACTICE EXAM
    </h1>
    <h2 class="h4 text-muted fst-italic">
        "No Pain, No Gain"
    </h2>
    <div class="mt-3">
        <span class="badge bg-primary fs-6 px-3 py-2">Ready to Challenge Yourself?</span>
    </div>
</div>

<h2>Available Quizzes</h2>

<table class="table table-bordered table-str">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Grade</th>
            <th>Range</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model.Quizzes)
        {
            <tr>
                <td>@quiz.Title</td>
                <td>
                    @if (quiz.IsAttempted)
                    {
                        <a asp-page="/View" asp-route-quizid="@quiz.Id" class="btn btn-outline-primary btn-sm">View</a>
                    }
                    else
                    {
                        <a asp-page="/Attempt" asp-route-quizid="@quiz.Id" class="btn btn-outline-primary btn-sm">Attempt</a>
                    }
                </td>
                <td>@quiz.GradeDisplay</td>
                <td>@quiz.GradeRange</td>
            </tr>
        }
    </tbody>
</table>